{
  "expo": {
    "name": "Velum",
    "slug": "velum-mobile",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "velum",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "backgroundColor": "#141416",
      "resizeMode": "contain"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.velum.mobile",
      "infoPlist": {
        "NSHealthShareUsageDescription": "Velum uses health data to track your fitness metrics.",
        "NSMicrophoneUsageDescription": "Velum uses the microphone for Spanish pronunciation practice."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#141416"
      },
      "package": "com.velum.mobile",
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 5000
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "plugins": [
      "expo-router",
      "expo-sqlite",
      "expo-updates",
      [
        "expo-av",
        {
          "microphonePermission": "Velum uses the microphone for Spanish pronunciation practice."
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "velum-mobile"
      }
    }
  }
}
