{
  "expo": {
    "name": "Velum",
    "slug": "velum-mobile",
    "version": "2.2.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "velum",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "backgroundColor": "#141416",
      "resizeMode": "contain"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.velum.mobile",
      "infoPlist": {
        "NSHealthShareUsageDescription": "Velum uses health data to track your fitness metrics.",
        "NSMicrophoneUsageDescription": "Velum uses the microphone for Spanish pronunciation practice.",
        "NSCameraUsageDescription": "Velum uses the camera to identify food and log nutrition automatically.",
        "NSPhotoLibraryUsageDescription": "Velum accesses photos to identify food for nutrition logging."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#141416"
      },
      "package": "com.velum.mobile",
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.RECORD_AUDIO",
        "android.permission.REQUEST_INSTALL_PACKAGES",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE"
      ]
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/f0325054-208a-45ff-81d0-867c8fb032d5"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "plugins": [
      "expo-router",
      "expo-sqlite",
      "expo-updates",
      [
        "expo-av",
        {
          "microphonePermission": "Velum uses the microphone for Spanish pronunciation practice."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Velum accesses photos to identify food for nutrition logging.",
          "cameraPermission": "Velum uses the camera to identify food and log nutrition automatically."
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "f0325054-208a-45ff-81d0-867c8fb032d5"
      }
    },
    "owner": "mihai233"
  }
}
