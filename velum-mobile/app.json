{
  "expo": {
    "name": "Velum",
    "slug": "velum-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "velum",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "backgroundColor": "#1c1917",
      "resizeMode": "contain"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.velum.mobile",
      "infoPlist": {
        "NSHealthShareUsageDescription": "Velum uses health data to track your fitness metrics."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1c1917"
      },
      "package": "com.velum.mobile",
      "permissions": ["android.permission.INTERNET", "android.permission.ACCESS_NETWORK_STATE"]
    },
    "plugins": [
      "expo-router",
      "expo-sqlite"
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "velum-mobile"
      }
    }
  }
}
